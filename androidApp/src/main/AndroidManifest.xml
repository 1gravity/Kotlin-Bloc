<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.onegravity.bloc">

    <application
        android:name=".Application"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Reduce">

        <activity
            android:name=".MainActivity"
            android:label="BLoC Framework"
            android:theme="@style/AppTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".counter.CounterActivity"
            android:label="Counter Simple"
            android:theme="@style/AppTheme"
            android:exported="false"/>

        <activity
            android:name=".counter.CounterReduxActivity"
            android:label="Counter Redux"
            android:theme="@style/AppTheme"
            android:exported="false"/>

        <activity
            android:name=".books.BooksActivity"
            android:label="Books"
            android:theme="@style/AppTheme"
            android:exported="false"/>

        <activity
            android:name=".posts.PostActivity"
            android:label="BLoC Posts"
            android:theme="@style/AppTheme"
            android:exported="false"/>

        <activity
            android:name=".calculator.CalculatorActivity"
            android:label="Calculator"
            android:theme="@style/AppTheme"
            android:exported="false"/>

    </application>

</manifest>